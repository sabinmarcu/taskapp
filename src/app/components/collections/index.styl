@import "../variables"

:host
    display flex
    flex-flow column wrap
    flex 1
    
header
    position relative
    height topnavheight
    background #444
    margin-top (0 - topnavheight)
    transition margin 0.5s ease-in-out
    flex 0 0 topnavheight
    box-shadow inset 0px -3px 6px rgba(0, 0, 0, 0.2)
    &.active
        margin 0
        fab
            margin (0 - fabsize / 2) 0 0 60px
    fab
        position absolute
        top 100%
        margin 15px
        transition margin 0.5s ease-in-out
        opacity 1
        
section
    flex 1
    display flex
    align-items stretch