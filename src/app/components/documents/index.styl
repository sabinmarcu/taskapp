@import "../variables"

:host
    display flex
    flex-flow row wrap
    flex 1
    
header
    position relative
    width topnavheight
    background #444
    margin-right (0 - topnavheight)
    transition margin 0.5s ease-in-out
    flex 0 0 topnavheight
    box-shadow inset -3px 0 6px rgba(0, 0, 0, 0.2)
    &.active
        margin 0
        fab
            margin 0 (0 - fabsize / 2) 60px 0
    fab
        position absolute
        right 100%
        bottom 0
        margin 15px
        transition margin 0.5s ease-in-out
        opacity 1
        z-index 3
        
section
    flex 2
    display flex
    align-items stretch
    transition margin 0.5s ease-in-out
    &.active
        margin-left (0 - topnavheight)